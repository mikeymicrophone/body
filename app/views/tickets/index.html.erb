<h1>Listing tickets</h1>

<table>
  <tr>
    <th>Tier</th>
    <th>Viber</th>
    <th>Transaction</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tickets.each do |ticket| %>
  <tr>
    <td><%= link_to ticket.tier.name, ticket.tier %></td>
    <td><%= link_to ticket.viber.email, ticket.viber %></td>
    <td><%= link_to ticket.transaction_id, ticket.transaction %></td>
    <td><%= link_to 'Show', ticket %></td>
    <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
    <td><%= link_to 'Destroy', ticket, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

