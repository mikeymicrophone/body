<% @rsvps.each do |rsvp| %>
  <%= div_for rsvp do %>
    <%= rsvp.viber.email %>
    <%= link_to rsvp.event.name, event_rsvps_path(rsvp.event) %>
    <%= rsvp.sincerity %>
    <%= rsvp.note %>
    <%= link_to 'Show', rsvp %>
    <%= link_to 'Edit', edit_rsvp_path(rsvp) %>
    <%= link_to 'Destroy', rsvp, confirm: 'Are you sure?', method: :delete %>
  <% end %>
<% end %>