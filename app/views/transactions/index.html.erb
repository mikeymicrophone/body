<h1>Listing transactions</h1>

<table>
  <tr>
    <th>Viber</th>
    <th>Transaction record</th>
    <th>Points in</th>
    <th>Points out</th>
    <th>Note</th>
    <th>Item type</th>
    <th>Item</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= transaction.viber_id %></td>
    <td><%= transaction.transaction_record_id %></td>
    <td><%= transaction.points_in %></td>
    <td><%= transaction.points_out %></td>
    <td><%= transaction.note %></td>
    <td><%= transaction.item_type %></td>
    <td><%= transaction.item_id %></td>
    <td><%= link_to 'Show', transaction %></td>
    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
    <td><%= link_to 'Destroy', transaction, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

