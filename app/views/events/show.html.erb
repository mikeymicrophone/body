<p id="notice"><%= notice %></p>

<p>
  <b><%= @event.name %></b>
</p>

<p>
  <%= @event.subtitle %>
</p>

<p>
  <% if @event.has_tickets_available? %>
    <%= link_to 'Get tickets', new_event_ticket_path(@event) %>
  <% end %>
</p>

<i>
  <%= @event.description %>
</i>

<p>
  <%= @event.start_time.strftime("%A, %B *%d from *%I o'clock %p").gsub('*0', '').gsub('*', '') %> until <%= @event.end_time.strftime("*%I o'clock %p on %A, %B *%d").gsub('*0', '').gsub('*', '') %>
</p>

<p>
  <%= image_tag @event.flyer_image.url if @event.flyer_image.present? %>
</p>

<%= link_to 'ticket tiers', event_tiers_path(@event) %>